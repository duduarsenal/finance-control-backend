generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb" //TIPO de Banco para conexao
  url      = env("DATABASE_URL") // URL de conex√£o com o MongoDB
}

model user {
  // Id
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  // Data
  nome        String
  usuario     String    @unique
  senha       String
  role        role      @relation(fields: [role_id], references: [id])
  role_id     String    @db.ObjectId
  categorias  categoria[]
  fields      field[]
  // Log
  dt_add    DateTime? @default(now())
  dt_upd    DateTime? 
  dt_del    DateTime?  
  ativo     Int?      @default(1)
}

model role {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  descricao String    @unique
  user      user[]
}

model categoria {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  descricao String
  cor       String
  emoji     String
  user      user      @relation(fields: [user_id], references: [id])
  user_id   String    @db.ObjectId
  field     field[]
}

model field {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  descricao     String
  tipo          String
  categoria     categoria @relation(fields: [categoria_id], references: [id])
  categoria_id  String    @db.ObjectId
  user          user      @relation(fields: [user_id], references: [id])
  user_id       String    @db.ObjectId
  parcelas      parcela[]
  total         Float
}

model parcela {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  data          String
  field         field     @relation(fields: [field_id], references: [id])
  field_id      String    @db.ObjectId
  parcela       Int       @default(1)
  valor         Int
}